<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#08fff3"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#419163"
        android:text="Compound Interest Calculator"
        android:textSize="30dp"
        android:textColor="#00ffee"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-1dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3abdcf"
            android:text="Enter your initial principal balance:"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="188dp" />

        <EditText
            android:id="@+id/principal_balance_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="222dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Enter your interest rate:"
            android:background="#3abdcf"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="188dp" />

        <EditText
            android:id="@+id/interest_rate_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="222dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Enter in the number of times your interest is used per period of time:"
            android:background="#3abdcf"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="188dp" />

        <EditText
            android:id="@+id/number_of_times_interest_is_used_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="222dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Enter in the number of times your interest is used per period of time:"
            android:background="#3abdcf"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="188dp" />

        <EditText
            android:id="@+id/periods_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="222dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="40dp"
           android:padding="10dp">

           <Button
               android:id="@+id/calculate_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:backgroundTint="#1f14f5"
               android:text="Calculate Compound Interest"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               tools:ignore="MissingConstraints" />

           <Button
               android:id="@+id/clear_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="40dp"
               android:backgroundTint="#1f14f5"
               android:text="Clear"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               tools:ignore="MissingConstraints" />
       </LinearLayout>

        <TextView
            android:id="@+id/show_answer_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#151163"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            tools:ignore="MissingConstraints" />


    </LinearLayout>


</LinearLayout>